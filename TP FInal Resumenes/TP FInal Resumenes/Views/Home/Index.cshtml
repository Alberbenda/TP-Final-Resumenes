@using TP_FInal_Resumenes.Models
@{
    ViewBag.Title = "Home Page";
}

<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/Content/animate.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/Content/hamburgers.min.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/Content/animsition.min.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/Content/select2.min.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/Content/daterangepicker.css">
<link rel="stylesheet" type="text/css" href="~/Content/util.css">
<link rel="stylesheet" type="text/css" href="~/Content/Site.css">

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Resumamos!</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css">
</head>
<body>

    <!--   CONTAINER   -->
    <div class="container">
        <!-- Header -->
        <!-- Hero Section -->

        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <div class="shows">

            <center>

                <div class="shows"> <img src="~/Content/shows.png" alt="" width="615" height="60" /></div>
            </center>
        </div>

        <!-- Stats Gallery Section -->

        <div class="gallery">
           
            @foreach (Resumenes res in ViewBag.lista)
            {
                <div class="thumbnail">
                    <a href="#"><img src="images/bkg_06.jpg" alt="" width="2000" class="cards" /></a>
                    <h4>@res.Nombre </h4>
                    <p class="tag">@BD.TraerMateriaxId(res.FkMateria).NombreMateria</p>
                    <p class="tag">@BD.TraerEscuelaxId(res.FkEscuela).NombreEscuela</p>
                    <p class="tag">Puntuacion:@res.Puntuacion</p>
                    @if (Session["usuario"] != null)
                    {

                        <div class="container-login100-form-btn m-t-17"></div>

                        <a href="@Url.Action("ImageDownload", "Home", new { Id = res.IdResumen })" class="btnA btnA-white btnA-animate">
                            Descargar
                        </a>
                        <a href='@Url.Action("SumarMeGusta", "Home", new { Id = res.IdResumen })' class="container-login100-form-btn m-t-17">
                            Me Gusta
                        </a>


                        if (Session["admin"] != null)
                        {
                            <a href='@Url.Action("EliminarRes", "Home", new { Id = res.IdResumen })' class="btnA btnA-white btnA-animate">
                                Eliminar Resumen
                            </a>

                        }
                    }
                </div>
            }
        </div>
        <hr />
        <hr />
        <hr />


        <center>

            <div class="showdwn"> <img src="~/Content/bannerbg.png" alt="" width="987" height="233" /></div>
        </center>


        <!-- Footer Section -->
        <!-- Copyrights Section -->


    </div>
    <!-- Main Container Ends -->
</body>
</html>