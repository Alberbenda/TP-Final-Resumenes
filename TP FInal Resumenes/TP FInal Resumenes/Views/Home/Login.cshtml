<center>
    <div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">
        @using (Html.BeginForm("ValidarLoginUsuario", "Home", FormMethod.Post, new { @class = "login100-form validate-form flex-sb flex-w" }))
        {
            <h2>
                <b>
                    Iniciar sesión
                </b>
            </h2>

            <div class="p-t-31 p-b-9">
                <span class="txt1">
                    Nombre de usuario
                </span>
            </div>

            <div class="wrap-input100 validate-input" data-validate="Se requiere un nombre de usuario">
                @Html.TextBoxFor(model => model.Username, new { @class = "input100" })
                <span class="focus-input100">
                    @Html.ValidationMessageFor(model => model.Username)
                </span>
            </div>

            <div class="p-t-13 p-b-9">
                <span class="txt1">
                    Contraseña
                </span>

                <a href="#" class="txt2 bo1 m-l-5">
                    ¿Olvidaste tu contraseña?
                </a>
            </div>
            <div class="wrap-input100 validate-input" data-validate="Se requiere una contraseña">
                @Html.PasswordFor(model => model.Contrasena, new { @class = "input100" })
                <span class="focus-input100">
                    @Html.ValidationMessageFor(model => model.Contrasena)
                </span>
            </div>

            <div class="container-login100-form-btn m-t-17">
                <input type="submit" class="login100-form-btn" value="Iniciar sesión">
            </div>

            <div class="w-full text-center p-t-55">
                <span class="txt2">
                    ¿No estas registrado?
                </span>

                <a href="@Url.Action("CrearCuenta", "Home")" class="txt2 bo1">
                    Registráte ahora
                </a>
            </div>
        }
    </div>
    <br />
    <br />
    <br />
</center>

